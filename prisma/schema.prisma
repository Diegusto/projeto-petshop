generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "DATABASE_URL"


}

model products {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  price       Int
  quantity    Int
  brand       String
  sale        sales[]
}

model sales {
  id         Int      @id @default(autoincrement())
  buyerId    String
  productId  Int
  status     status
  dueDate    DateTime
  totalValue Int
  user       users    @relation(fields: [buyerId], references: [id])
  product    products @relation(fields: [productId], references: [id])
}

model users {
  id       String  @id @default(uuid())
  name     String
  document String  @unique
  password String
  type     String
  email    String
  sale     sales[]
}

enum status {
  order
  paid
  pending
  canceled
}
